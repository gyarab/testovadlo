#!/bin/bash -x

function jj { local IFS=":"; echo "$*"; }

main=$(head -1 /data/.mainclass)
jars=( . $(find / -maxdepth 1 -type f -name '*.jar') )

echo "$ java -cp $(jj "${jars[@]#/}") $main"
(cd /data/build; java -cp $(jj "${jars[@]}") "$main") &

sleep 0.25

curl -s http://localhost:8001 || exit 11
wait
